[
    {
      "name": "devops_challenge",
      "image": "${var.account_id}.dkr.ecr.${var.region}.amazonaws.com/${var.project_name}:latest",
      "cpu": 256,
      "memory": 512,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "${var.region}",
          "awslogs-group": "/ecs/${var.project_name}",
          "awslogs-stream-prefix": "${var.project_name}"
        } 
      }
    }
]